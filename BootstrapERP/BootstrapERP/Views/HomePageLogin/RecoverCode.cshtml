@model BootstrapERP.Models.UserList
@{
    ViewBag.Title = "RecoverCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block">Enter Security Code<small></small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li>
                        @Html.ActionLink("Home", "Index", "BlogPosts")
                    </li>
                    <li class="active">Enter Security Code</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                if (@ViewBag.Message != null)
                {
                    <div id="popupdiv" style="border: 1px solid red; display: none;">
                        @ViewBag.Message
                    </div>
                }

                    <div class="form-horizontal">
                        <h6>Please check your email for a message with your code.</h6>
                        <hr />
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            <div class="col-md-10">
                                <div style="display:inline;padding-top:15px;float:left">
                                    We sent your code to:<br>
                                    <h3>@Html.Raw(@ViewBag.UserEmail)</h3>
                                </div>
                                <div style="display:inline;padding-top:15px;float:left">
                                    @Html.TextBoxFor(model => model.SecurityCode, new { placeholder = "Security Code", type = "text", @class = "form-control", style = "width:300px !important", @required = true })
                                    @Html.ValidationMessageFor(model => model.SecurityCode)
                                </div>
                                <div style="display:inline;padding-top:15px;float:left">
                                    @Html.TextBoxFor(model => model.UserPassword, new { placeholder = "Password", type = "password", @class = "form-control", style = "width:300px !important", @required = true })
                                    @Html.ValidationMessageFor(model => model.UserPassword)
                                </div>
                                <div style="display:inline;padding-top:15px;float:left">
                                    @Html.TextBoxFor(model => model.ConfirmPassword, new { placeholder = "Confirm Password", type = "password", @class = "form-control", style = "width:300px !important", @required = true })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </div>

                            </div>
                        </div>

                        <div class="form-group" style="min-height:15px"></div>

                        <div class="form-group">
                            <div class="col-md-10 ">
                                <div style="display:inline;float:left">
                                    <input type="submit" value="Continue" class="btn btn-success" />
                                </div>
                                <div style="display:inline;padding-top:3px;float:left;padding-left:25px">
                                    <ul class="nav">
                                        <li id="Createanaccount">
                                            @Html.ActionLink("Create an account", "CreateUserHome", "UserProfileHome")
                                        </li>
                                    </ul>
                                </div>
                                <div style="display:inline;padding-top:10px;float:left;width:5px">
                                    <ul class="nav navbar-left">
                                        <li id="separetor">
                                            |
                                        </li>

                                    </ul>
                                </div>
                                <div style="display:inline;padding-top:3px;float:left">
                                    <ul class="nav navbar-left">
                                        <li id="Signin">
                                            @Html.ActionLink("Sign in", "GetLogin", "HomePageLogin", new { caseNo = 1, targetURL = "" }, htmlAttributes: null)
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
            }
        </div>
        <div class="col-md-6">
            <img src="~/Images/SignIn.jpg" class="img-responsive">
        </div>
    </div>
    <div class="row" style="min-height:55px">
        <div class="col-lg-12">
        </div>
    </div>
</div>

