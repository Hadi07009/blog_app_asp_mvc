@model BootstrapERP.Models.QuoteAuthor
@{
    ViewBag.Title = "Quotation Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block"><span class="hapText"> @ViewBag.Title </span><small> </small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li class="hapText">@Html.ActionLink("Home", "Index", "BlogPosts")</li>
                    <li class="hapText">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-sm-12" style="min-height:450px">
            @using (Html.BeginForm("Index", "QuotationEntry", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
            <div class="row">
                <div class="container">
                    <div class="row well">
                        <div class="col-lg-10 col-md-10">
                            <p>For build your web site with Bootstrap!, Please add content and build your site.........,For build your web site with Bootstrap!, Please add content and build your</p>
                        </div>
                        <div class="col-lg-2 col-md-2" style="text-align:right">
                            <a style="text-decoration:none;" class="btn btn-primary btn-anim" href="@Url.Action("Index", "QuotationAuthor")">
                                <i class="fa fa-pencil"></i><span class="btn-text">New Author</span>
                            </a>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>

                <div class="form-group col-lg-8">
                    <label for="input1" class="labelcss">Author</label>
                    @Html.DropDownList("QuoteAuthorID", null, new { type = "text", @class = "form-control" })
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-8">
                    <label for="input1" class="labelcss">Quotation Type</label>
                    @Html.DropDownList("AuthorTypeID", null, new { type = "text", @class = "form-control" })
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-8">
                    <label for="input1" class="labelcss">Quotation</label><br />
                    @Html.TextBoxFor(model => model.QuoteDescription, new { style = "width:100%;", @class = "form-control", @required = true })
                    @Html.ValidationMessageFor(model => model.QuoteDescription, "", new { @class = "text-danger" })
                </div>
                <div class="clearfix" ></div>
                <div class="form-group col-lg-8">
                    <label for="input1" class="labelcss">Remarks</label><br />
                    @Html.TextBoxFor(model => model.QuoteRemarks, new { style = "width:100%;", @class = "form-control", @required = true })
                    @Html.ValidationMessageFor(model => model.QuoteRemarks, "", new { @class = "text-danger" })
                </div>
                <div class="clearfix"></div>

            </div>

                <div class="clearfix"></div>
                @*<br />*@
                <div class="row">
                    <div class="form-group col-lg-12">
                        <button type="submit" name="saveQuotation" class="btn btn-primary btn-anim"><i class="fa fa-pencil"></i><span class="btn-text">Save</span></button>&nbsp;&nbsp;|&nbsp;&nbsp;@Html.ActionLink("Back", "Index", "QuotationRecord")
                    </div>
                </div>

            }
        </div>

    </div><!-- /.row -->

    <div class="row" style="min-height:75px"></div>

</div>

