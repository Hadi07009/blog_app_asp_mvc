@model BootstrapERP.Models.UserProfile
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block">@ViewBag.Title <small></small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li>
                        @Html.ActionLink("Home", "Index", "BlogPosts")
                    </li>
                    <li class="active">User account</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @*<hr />*@
                    @Html.ValidationSummary(true)
                    <div class="clearfix"></div>
                    <br />
                    <br />
                    <div class="form-group col-lg-12">
                        <ul style="list-style: none;">
                            <li style="display:block;float:left;padding-top:3px"><picture> <img class="img-responsive" src="~/Images/about_5.png"></picture></li>
                            <li style="padding-bottom:15px" class="labelcss">Registration completed successfully</li>
                        </ul>
                    </div>

                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        <label for="input1">Name</label><br />
                        @Html.TextBoxFor(model => model.FullName, new { style = "width:100%;", @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        <label for="input1">Email</label><br />
                        @Html.TextBoxFor(model => model.Email, new { style = "width:100%;", @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        <label for="input1">Mobile Number</label><br />
                        @Html.TextBoxFor(model => model.MobilePIN, new { style = "width:100%;", @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.MobilePIN, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <div style="display:inline;padding-top:3px;float:left;padding-left:25px">
                                <ul class="nav">
                                    <li id="Signin" class="labelcss">
                                        @Html.ActionLink("Sign in", "GetLogin", "HomePageLogin", new { caseNo = 1, targetURL = "" }, htmlAttributes: null)
                                    </li>
                                </ul>
                            </div>
                            <div style="display:inline;padding-top:15px;float:left;width:5px">
                                <ul class="nav navbar-left">
                                    <li id="separetor">
                                        |
                                    </li>
                                </ul>
                            </div>
                            <div style="display:inline;padding-top:3px;float:left">
                                <ul class="nav navbar-left">
                                    <li id="Signin" class="labelcss">
                                        @Html.ActionLink("Home", "Index", "BlogPosts")
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
        <div class="col-md-6">
            <img src="~/Images/CreateAccount.jpg" class="img-responsive">
        </div>
    </div>


    <div class="row" style="min-height:60px">

    </div>
</div>



