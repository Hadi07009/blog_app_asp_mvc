                        <img style="height:130px;width:auto" src="@Url.Content(@contentDetailImageURL)" class="img-responsive" />
                    </a>
                    <h4>
                        <a href="@Url.Action("BlogDescription", "SiteContentDisplay",new { @contentDetailID =Convert.ToInt32(@ContentID),@ctitle =(@hiphenUrl)})">@Html.Raw(@contentTitle.Length > 40 ? @contentTitle.Substring(0, 40) + " . . ." : @contentTitle)</a>

                    </h4>
                </div>
            }

        </div>
        <div class="col-md-3" style="display:inline-block">
            <div>
                <img style="height: 200px; width: 100%;" class="img-responsive img-home-portfolio" src="~/Images/javascript.jpg">
            </div>
            <div>
                <img style="height: 200px; width: 100%;" class="img-responsive img-home-portfolio" src="~/Images/webapi.png">
            </div>

        </div>
        <div class="col-md-9">
            <hr>
