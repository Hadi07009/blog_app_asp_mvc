@model BootstrapERP.Models.SiteContentDetails

@using System.Data;
@{
    ViewBag.Title = "blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string @url = "http://27.147.194.139/blogsite/SiteContentDisplay/BlogDescription?contentDetailID=" + Html.DisplayFor(model => model.ContentID);

}

<div class="container">
    <br />
    <div class="row">
        <div class="col-lg-9">
            <p>
                <div style="text-align:left">
                    @Html.Raw(@ViewBag.FullName) | @Html.Raw(Model.ContentEntryDate.ToString("D")) | @Html.Raw(ViewBag.ContentCategoryTitle)
                </div>
            </p>

            <p class="lead"><h1>@Html.Raw(Model.ContentTitle)</h1></p>
            <p class="lead"><h3>@Html.Raw(Model.ContentDetailSubTitle)</h3></p>
            <!-- the actual blog post: title/author/date/content -->

            <span style="display:inline" class="x-weight-semibold"></span>
            <ul style="list-style:none;display:flex;padding-left:5px;width:100%;padding-top:5px;">
                <li style="display:inline;">
                    <a href="https://twitter.com/share"
                       data-url=@url.ToString()
                       data-text="Enter Data text here"
                       data-size="medium" data-count="none" target="_blank" class="twitter-share-button">
                        Tweet
                    </a>
                </li>
                <li style="display:inline;padding-left:10px;">
                    <script type="IN/Share" medium="true" data-onsuccess="lnksuccess" data-onerror="error" data-url=@url.ToString()>

                    </script>
                </li>
                <li style="display:inline;margin-left:10px">
                    <a href="https://www.facebook.com/sharer/sharer.php?
           u=@Url.Encode(@url.ToString())&t=@Url.Encode(@url)"
                       target="_blank">
                        <img style="padding-bottom:10px" src="~/Images/facebookShare_1.png" alt="Facebook Logo">
                    </a>
                </li>
            </ul>
            <hr>
            <img src="@Url.Content(Model.ContentDetailImageURL)" class="img-responsive" />
            <hr>
            <p class="blogDetailcss">@Html.Raw(Model.ContentDescription)</p>
            @*<p class="lead">@Html.Raw(Model.ContentDescription)</p>*@
            <div class="clearfix"></div>
            <ul style="list-style:none;display:flex;padding-left:5px;width:100%;padding-top:5px;">
                <li style="display:inline;">
                    <a href="https://twitter.com/share"
                       data-url=@url.ToString()
                       data-text="Enter Data text here"
                       data-size="medium" data-count="none" target="_blank" class="twitter-share-button">
                        Tweet
                    </a>
                </li>
                <li style="display:inline;padding-left:10px;">
                    <script type="IN/Share" medium="true" data-onsuccess="lnksuccess" data-onerror="error" data-url=@url.ToString()>

                    </script>
                </li>
                <li style="display:inline;margin-left:10px">
                    <a href="https://www.facebook.com/sharer/sharer.php?
           u=@Url.Encode(@url.ToString())&t=@Url.Encode(@url)"
                       target="_blank">
                        <img style="padding-bottom:10px" src="~/Images/facebookShare_1.png" alt="Facebook Logo">
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-lg-3">
            <!-- /well -->
            <div class="well" style="width:100%;text-align:center">
                <h4>Popular Blog Categories</h4>
                <div class="row">
                    <table id="contentCategory" style="width:100%;text-align:center">
                        @foreach (System.Data.DataRow rowNo in Model.DtContentCategory.Rows)
                        {
                            <tr>
                                <td nowrap="nowrap">
                                    <a href="@Url.Action("BlogCategory", "SiteContentDisplay",new {@contentCategoryID = Convert.ToInt32(rowNo["ContentCategoryID"].ToString())})">@Html.Raw(rowNo["ContentCategoryTitle"].ToString())</a>

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
            <!-- /well -->
            <div>
                <img style="height: 200px; width: 100%;" class="img-responsive img-home-portfolio" src="~/Images/javascript.jpg">
            </div>
            <!-- /well -->
            <div>
                <img style="height: 200px; width: 100%;" class="img-responsive img-home-portfolio" src="~/Images/webapi.png">
            </div>
            <div>
                <img style="height: 200px; width: 100%;" class="img-responsive img-home-portfolio" src="~/Images/jquery.png">
            </div>
            <!-- /well -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9" style="padding-bottom:10px">
            <h3 style="font:bolder;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif"> More in @Html.Raw(ViewBag.ContentCategoryTitle)  </h3>
        </div>
        <div class="col-md-3">

        </div>

    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-9" style="display:inline-block;text-align:left">

            @foreach (DataRow rowNo in Model.DtBlogUniqueCategory.Rows)
            {
                var @ContentID = rowNo["ContentID"].ToString();
                var @contentDetailImageURL = rowNo["ContentDetailImageURL"].ToString() == "" ? "~/ImagesUploaded/750x500.png" : rowNo["ContentDetailImageURL"].ToString();
