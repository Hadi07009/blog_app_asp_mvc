@model BootstrapERP.Models.BlogContentDetail

@using BootstrapERP.Models

@using System.Collections
@using GridMvc.Html

@{
    ViewBag.Title = "Content Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block"><span class="hapText"> @ViewBag.Title </span><small> </small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li class="hapText">@Html.ActionLink("Home", "Index", "BlogPosts")</li>
                    <li class="hapText">@ViewBag.Title</li>
                </ol>
            </div>
        </div>

        <div class="col-sm-12">

            @using (Html.BeginForm("ContentEntry", "SiteContentEntry", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div style="display:block;" id="addContentHeader" runat="server">
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label for="input2" class="labelcss">Category</label>
                            @Html.DropDownList("ContentCategory", null, new { type = "text", @class = "form-control" })

                        </div>
                        <div class="form-group col-lg-6">
                            <label for="input2" class="labelcss">Related To</label>
                            @Html.DropDownList("ContentRelatedTo", null, new { type = "text", @class = "form-control" })

                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div style="display:block;" id="addContent" runat="server">
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="form-group col-lg-9">
                            <label for="input1" class="labelcss">Title</label><br />
                            @Html.TextBoxFor(model => model.ContentDetailTitle, new { style = "width:100%;", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(model => model.ContentDetailTitle, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-lg-3">
                            <label for="input4" class="labelcss">Image</label>
                            <input name="file" type="file" />
                            @Html.ValidationMessageFor(model => model.ContentDetailImageURL, "", new { @class = "text-danger" })
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-lg-12">
                            <label for="input1" class="labelcss">Sub Title</label><br />
                            @Html.TextBoxFor(model => model.ContentDetailSubTitle, new { style = "width:100%;", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ContentDetailSubTitle, "", new { @class = "text-danger" })
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-lg-12">
                            <label for="input1" class="labelcss">Introductory Content</label><br />
                            @Html.TextBoxFor(model => model.ContentIntroductoryText, new { style = "width:100%;", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ContentIntroductoryText, "", new { @class = "text-danger" })
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-lg-12">
                            <label for="input4" class="labelcss">Description</label>
                            @Html.TextAreaFor(model => model.ContentDetailDescription, new { rows = "20", style = "resize:none;width:100%;", placeholder = Html.DisplayNameFor(model => model.ContentDetailDescription), @class = "form-control input-lg textarea-editor", @required = true })
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <br />
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="form-group col-lg-8">
                            <button class="btn btn-primary btn-anim" type="submit" name="contentSave" onclick="unhook()">Save</button>&nbsp;&nbsp;<button class="btn btn-success btn-anim" type="submit" name="addtoSubmitList"><span>Submit</span></button>&nbsp;&nbsp;|&nbsp;&nbsp;@Html.ActionLink("Back to List", "Index", "SiteContentRecord")
                        </div>
                        
                    </div>
                </div>

            }

        </div>

    </div><!-- /.row -->


    <div class="row" style="min-height:250px"></div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/bootstrap-file")
    @Styles.Render("~/Content/Bootstrap-file/css")
    <script src="~/Scripts/summernote/summernote.js"></script>
    <link href="~/Scripts/summernote/summernote.css" rel="stylesheet" />
    <script src="~/Scripts/script-custom-editor.js"></script>
}

