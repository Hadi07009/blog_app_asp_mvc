<script type="text/javascript">

    $(document).ready(function () {
        //Dropdownlist Selectedchange event

        $("#ContentCategory").change(function () {
            $("#ContentRelatedTo").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetContentRelatedTo", "BlogContentApproval")', // we are calling json method

                dataType: 'json',

                data: { id: $("#ContentCategory").val() },
               // here we are get value of selected ContentCategory and passing same value as inputto json method GetStates.

                success: function (queryContentRelatedTo) {
                    // states contains the JSON formatted list
                    // of states passed from the controller

                    $.each(queryContentRelatedTo, function (i, state) {
                        $("#ContentRelatedTo").append('<option value="' + state.Value + '">' +
                         state.Text + '</option>');

                    // here we are adding option for States

                    });
                },

            });
            return false;
        })
    });

