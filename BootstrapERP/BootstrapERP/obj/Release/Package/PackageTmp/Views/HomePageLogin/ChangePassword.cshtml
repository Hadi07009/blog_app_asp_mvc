@model BootstrapERP.Models.UserList
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block"><span class="hapText"> @ViewBag.Title</span> <small> </small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li class="hapText">@Html.ActionLink("Home", "Index", "BlogPosts")</li>
                    <li class="hapText">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                if (@ViewBag.Message != null)
                {
                    <div id="popupdiv" style="border: 1px solid red; display: none;">
                        @ViewBag.Message
                    </div>
                }

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <div class="col-md-10">
                            <div style="display:inline;padding-top:15px;float:left">
                                @Html.TextBoxFor(model => model.CurrentPassword, new { placeholder = "Current Password", type = "password", @class = "form-control", style = "width:300px !important", @required = true })
                                @Html.ValidationMessageFor(model => model.CurrentPassword)
                            </div>
                            <div style="display:inline;padding-top:15px;float:left">
                                @Html.TextBoxFor(model => model.UserPassword, new { placeholder = "New Password", type = "password", @class = "form-control", style = "width:300px !important", @required = true })
                                @Html.ValidationMessageFor(model => model.UserPassword)
                            </div>
                            <div style="display:inline;padding-top:15px;float:left">
                                @Html.TextBoxFor(model => model.ConfirmPassword, new { placeholder = "Repeat New Password", type = "password", @class = "form-control", style = "width:300px !important", @required = true })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 ">
                            <div style="display:inline;float:left">
                                <input type="submit" value="Submit" class="btn btn-success" />
                            </div>
                            
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            
        </div>
    </div>
    <div class="row" style="min-height:325px">
        <div class="col-lg-12">
        </div>
    </div>
</div>

