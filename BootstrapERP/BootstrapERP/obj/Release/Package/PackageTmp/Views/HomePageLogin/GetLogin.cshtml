@model BootstrapERP.Models.UserList

@{
    ViewBag.Title = "GetLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block"><span class="hapText"> Sign in</span> <small>It's Nice to Meet You!</small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li class="hapText">
                        @Html.ActionLink("Home", "Index", "BlogPosts")
                    </li>
                    <li class="hapText">Sign in</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row" style="min-height:50px">
        <div class="col-lg-12">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("GetLogin", "HomePageLogin"))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
            <div style="min-height:30px;color:red;font-family:Lato, Calibri, Helvetica, Roboto; display: block;">
                @Html.Raw(@ViewBag.MessagePassword)
            </div>
            <br/>

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group col-lg-12">
                        <label class="labelcss">Email, Phone, User name</label><br />
                        @Html.TextBoxFor(model => model.UserName, new { type = "text", style = "width:100%;", @class = "form-control", @required = true })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        <label class="labelcss">Password</label><br />
                        @Html.TextBoxFor(model => model.UserPassword, new { type = "password", @class = "form-control", style = "width:100%", @required = true })
                        @Html.ValidationMessageFor(model => model.UserPassword)
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12" style="min-height:15px">
                        @Html.Hidden("returnUrl", @Request.QueryString)@Html.Hidden("caseNo", @Request.QueryString)
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        <div style="display:inline;float:left;">
                            <input type="submit" value="Log in" class="btn  btn-primary" />
                        </div>
                        <div style="display:inline;padding-top:3px;float:left;padding-left:15px">
                            <ul class="nav">
                                <li id="Createanaccount" class="createAccount">
                                    @Html.ActionLink("Create an account", "CreateUserHome", "UserProfileHome")
                                </li>
                            </ul>
                        </div>
                        <div style="display:inline;padding-top:14px;float:left;width:5px">
                            <ul class="nav navbar-left">
                                <li id="separetor">
                                    |
                                </li>

                            </ul>
                        </div>
                        <div style="display:inline;padding-top:3px;float:left">
                            <ul class="nav navbar-left">
                                <li id="Forgotpassword" class="forgotPassword">
                                    @Html.ActionLink("Forgot password?", "Identify", "HomePageLogin")

                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            <img src="~/Images/SignIn.jpg" class="img-responsive">
        </div>

    </div>
    <div class="row" style="min-height:190px">
        <div class="col-lg-12">
        </div>
    </div>
</div>


