@model BootstrapERP.Models.SiteContentDetails
@{
    ViewBag.Title = "PortfolioDesign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block">@ViewBag.viewTitle <small> </small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li>@Html.ActionLink("Home", "Index", "BlogPosts")</li>
                    <li class="active">@ViewBag.viewTitle</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="row">
        @{
            var contentImageURLPart1 = Model.ContentDetailImageURL == null ? string.Empty : Model.ContentDetailImageURL;
        }
        @if (contentImageURLPart1 != string.Empty)
        {
            <div class="col-md-7">

                <a href="@Url.Action("PortfolioDescription", "SiteContentDisplay",new { @contentDetailID =Convert.ToInt32(@ViewBag.ContentDetailID1)})">
                    <img src="@Url.Content(contentImageURLPart1)" class="img-responsive" />
                </a>
            </div>
            <div class="col-md-5">
                <h3>@Html.Raw(Model.ContentTitle)</h3>
                <h4>@Html.Raw(Model.ContentDetailSubTitle)</h4>
                <p>@Html.Raw(Model.ContentIntroductoryText)</p>
                <a href="@Url.Action("PortfolioDescription", "SiteContentDisplay",new { @contentDetailID =Convert.ToInt32(@ViewBag.ContentDetailID1)})" class="btn btn-primary">View Project <i class="fa fa-angle-right"></i></a>
