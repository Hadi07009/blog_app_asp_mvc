@model BootstrapERP.Models.siteContentEntryTemp

@{
    ViewBag.Title = "CreateContent";
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

@using (Html.BeginForm("CreateContent", "SiteContentEntry", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="form-group col-lg-8">
                        <label for="input1">Title</label><br />
                        @Html.TextBoxFor(model => model.contentTitle, new { style = "width:100%;", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.contentTitle, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="input4">Image</label>
                        <input name="file" type="file" />
                        @Html.ValidationMessageFor(model => model.contentImage, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        <label for="input1">Sub Title</label><br />
                        @Html.TextBoxFor(model => model.contentSubTitle, new { style = "width:100%;", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.contentSubTitle, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        <label for="input1">Introductory Content</label><br />
                        @Html.TextBoxFor(model => model.introductoryText, new { style = "width:100%;", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.introductoryText, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        <label for="input4">Description</label>
                        @Html.TextAreaFor(model => model.contentDescription, new { rows = "20", style = "resize:none;width:100%;", placeholder = Html.DisplayNameFor(model => model.contentDescription), @class = "form-control input-lg textarea-editor" })
                    </div>
                    <div class="clearfix"></div>

                    <p>
                        <div class="form-group col-lg-12">
                            <input type="submit" value="Add to List" name="addtoList" class="btn btn-success" />&nbsp;&nbsp;<input type="submit" value="Save & Submit" name="addtoSubmitList" class="btn btn-success" />&nbsp;&nbsp;|&nbsp;&nbsp;@Html.ActionLink("Back to List", "Index")

                        </div>
                    </p>

                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    <script src="~/Scripts/summernote/summernote.js"></script>
    <link href="~/Scripts/summernote/summernote.css" rel="stylesheet" />
    <script src="~/Scripts/script-custom-editor.js"></script>
    @Scripts.Render("~/bundles/bootstrap-file")
    @Styles.Render("~/Content/Bootstrap-file/css")
}

