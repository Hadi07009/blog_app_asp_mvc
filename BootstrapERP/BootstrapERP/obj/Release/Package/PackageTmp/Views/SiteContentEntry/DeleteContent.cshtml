@model BootstrapERP.Models.siteContentEntryTemp

@{
    ViewBag.Title = "DeleteContent";
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="form-group col-lg-12">
                    <h3>Are you sure you want to delete this?</h3>

                    <dl>
                        <dt>
                            <label for="input1">Title</label><br />
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.contentTitle)<br />
                        </dd>
                        

                        <dt>
                            <label for="input4">Description</label><br />
                        </dt>

                        <dd>
                            @Html.Raw(Model.contentDescription)
                        </dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-success" /> |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    }
                </div>
                </div>
            </div>
        </div>
    </div>
