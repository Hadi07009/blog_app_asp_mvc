        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block">@ViewBag.Title <small> </small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li>@Html.ActionLink("Home", "Index", "BlogPosts")</li>
                    <li class="active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="row">
                <div class="form-group col-lg-12">
                    <h3>Are you sure you want to delete this?</h3>
                    <div class="col-sm-12">

                        @*@using (Html.BeginForm("DeleteConfirmed", "SiteContentRecord", FormMethod.Post, new { enctype = "multipart/form-data" }))*@
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div style="display:block;" id="addContentHeader" runat="server">
                                <div class="clearfix"></div>
                                <div class="row">
                                    <div class="form-group col-lg-6">
                                        <label for="input2">Category</label>
                                        @Html.DropDownList("ContentCategory", null, new { type = "text", @class = "form-control", @disabled = "disabled" })

                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label for="input2">Related To</label>
                                        @Html.DropDownList("ContentRelatedTo", null, new { type = "text", @class = "form-control", @disabled = "disabled" })

                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <div style="display:block;" id="addContent" runat="server">
                                <div class="clearfix"></div>
                                <div class="row">
                                    <div class="form-group col-lg-12">
                                        <label for="input1">Title</label><br />
                                        @Html.TextBoxFor(model => model.ContentDetailTitle, new { style = "width:100%;", @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(model => model.ContentDetailTitle, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.ContentID)
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <br />
                                <div class="clearfix"></div>
                                <div class="row">
                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-success" /> |
                                        @Html.ActionLink("Back to List", "Index", "SiteContentRecord")
                                    </div>
                                    @*<div class="form-group col-lg-8">
                        @Html.ActionLink("Back to List", "Index", "SiteContentRecord")
                    </div>*@
                                </div>
                            </div>

                        }

                    </div>



