@model BootstrapERP.Models.uUserProfileTemp

@{
    ViewBag.Title = "CreateUserHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block"><span class="hapText"> Account</span> <small>Create an account!</small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li class="hapText">
                        @Html.ActionLink("Home", "Index", "BlogPosts")
                    </li>
                    <li class="hapText">User account</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div style="min-height:30px;color:red;font-family:Lato, Calibri, Helvetica, Roboto; display: block;">
                    @Html.Raw(@ViewBag.MessagePassword)
                </div>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group col-lg-12">
                    <label class="labelcss">User Information:</label><br />
                </div>
                <div class="form-group col-lg-2">
                    @Html.DropDownList("UserTitle", (SelectList)ViewBag.CategoryId, new { type = "text", @class = "form-control", })
                    @Html.ValidationMessageFor(model => model.UserTitle)
                </div>
                <div class="form-group col-lg-4">
                    @Html.TextBoxFor(model => model.UserName, new { placeholder = "First Name", type = "text", @class = "form-control", @required = true })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
                <div class="form-group col-lg-6">
                    @Html.TextBoxFor(model => model.LastName, new { placeholder = "Last Name", type = "text", @class = "form-control", })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-6">
                    @Html.TextBoxFor(model => model.UserEmail, new { placeholder = "Email Address", type = "email", @class = "form-control", @required = true, pattern = "^[a-zA-Z0-9_\\.-]+@([a-zA-Z0-9-]+\\.)+[a-zA-Z]{2,6}$" })
                    @Html.ValidationMessageFor(model => model.UserEmail)

                </div>
                <div class="form-group col-lg-6">
                    @Html.TextBoxFor(model => model.MobileNumber, new { placeholder = "Mobile Number", type = "text", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MobileNumber)

                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-12" style="font-family:Lato, Calibri, Helvetica, Roboto">
                    <input type="checkbox" id="checkboxMyDiv" class="checkbox-success" onclick="myFunction();"> Company Information(Optional)
                </div>
                <div id="myDIV" style="display:none;padding-top:15px;">
                    <div class="form-group col-lg-6">
                        @Html.TextBoxFor(model => model.CompanyName, new { placeholder = "Your Company Name", type = "text", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CompanyName)
                    </div>
                    <div class="form-group col-lg-6">
                        @Html.TextBoxFor(model => model.CompanyEmail, new { placeholder = "Email Address", type = "email", @class = "form-control", pattern = "^[a-zA-Z0-9_\\.-]+@([a-zA-Z0-9-]+\\.)+[a-zA-Z]{2,6}$" })
                        @Html.ValidationMessageFor(model => model.CompanyEmail)

                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group" style="min-height:15px"></div>
                <div class="form-group">
                    <div class="col-md-10 ">
                        <div style="display:inline;float:left">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                        <div style="display:inline;padding-top:3px;float:left;padding-left:25px">
                            <ul class="nav">
                                <li id="Signin" class="labelcss">
                                    @Html.ActionLink("Sign in", "GetLogin", "HomePageLogin", new { caseNo = 1, targetURL = "" }, htmlAttributes: null)
                                </li>
                            </ul>
                        </div>
                        <div style="display:inline;padding-top:15px;float:left;width:5px">
                            <ul class="nav navbar-left">
                                <li id="separetor">
                                    |
                                </li>
                            </ul>
                        </div>
                        <div style="display:inline;padding-top:3px;float:left">
                            <ul class="nav navbar-left">
                                <li id="Signin" class="labelcss">
                                    @Html.ActionLink("Resend Security Code", "ResendCode", "ResendSecurityCode")
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>


            }
        </div>
        <div class="col-md-6">
            <img src="~/Images/CreateAccount.jpg" class="img-responsive">
        </div>
    </div>
    <div class="row" style="min-height:250px">
        <div class="col-lg-12">
        </div>
    </div>
</div>



<script type="text/javascript">
    function myFunction() {
        var x = document.getElementById("myDIV");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }

    


</script>





