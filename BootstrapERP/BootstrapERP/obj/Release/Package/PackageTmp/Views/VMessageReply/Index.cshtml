@model BootstrapERP.Models.VisitorsMessage

@{
    ViewBag.Title = "Message Reply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h4 style="display:inline-block">@ViewBag.Title <small> </small></h4>
                <ol class="breadcrumbLine" style="float:right;display:inline-block">
                    <li>@Html.ActionLink("Home", "Index", "BlogPosts")</li>
                    <li class="active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>

        <div class="col-sm-12">
            @using (Html.BeginForm("Index", "VMessageReply", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)

                @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-group col-lg-6">
                    <label for="input1" class="labelcss">Name</label><br />
                    @Html.TextBoxFor(model => model.Name, new { style = "width:100%;", @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.VisitorsID)
                    @Html.HiddenFor(model => model.MessageID)
                    @Html.HiddenFor(model => model.EmailAddress)
                    
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-6">
                    <label for="input1" class="labelcss">Subject</label><br />
                    @Html.TextBoxFor(model => model.MessageSubject, new { style = "width:100%;", @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.MessageSubject, "", new { @class = "text-danger" })
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-6">
                    <label for="input1" class="labelcss">Email Address</label><br />
                    @Html.TextBoxFor(model => model.EmailAddress, new { style = "width:100%;", @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-6">
                    <label for="input1" class="labelcss">Cc</label><br />
                    @Html.TextBoxFor(model => model.CcEmailAddress, new { style = "width:100%;", @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.CcEmailAddress, "", new { @class = "text-danger" })
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-6">
                    <label for="input1" class="labelcss">Message</label><br />
                    @Html.TextBoxFor(model => model.MessageText, new { style = "width:100%;", @class = "form-control", @disabled = "disabled", @rows = "6" })
                    @Html.ValidationMessageFor(model => model.MessageText, "", new { @class = "text-danger" })
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-6">
                    <label for="input1" class="labelcss">Entry Date</label><br />
                    @Html.TextBoxFor(model => model.EntryDate, new { @type = "date", @class = "form-control datepicker", @disabled = "disabled", @Value = Convert.ToDateTime(Model.EntryDate).ToString("yyyy-MM-dd"), data_date_format = "yyyy-MM-dd" })
                    @Html.ValidationMessageFor(model => model.EntryDate, "", new { @class = "text-danger" })

                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-12">
                    <label for="input4" class="labelcss">Message</label>
                    <textarea id="input4" rows="6" class="form-control" name="contact_message" required></textarea>
                </div>
                <div class="form-group col-lg-12">
                    <input type="hidden" value="contact" name="save">
                    <button class="btn btn-primary" type="submit">Submit</button>
                    &nbsp;&nbsp;@Html.ActionLink("Back to Message List", "Index", "VMessage")
                </div>
            </div>

            }
        </div>

    </div><!-- /.row -->

    <div class="row" style="min-height:143px"></div>

</div>


